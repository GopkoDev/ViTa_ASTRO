---
import '../styles/components/Footer.scss'
import { t } from "i18next";
---

<footer class="footer">
  <div class="footer__container">
    <div class="footer__socials">
      <h3 class="footer__socials_title">{t('footer.follow')}</h3>
      <div class="footer__socials_icons">
        <a href="#" class="footer__socials_icons icon-li"></a>
        <a href="#" class="footer__socials_icons icon-inst"></a>
        <a href="#" class="footer__socials_icons icon-pinterest"></a>
        <a href="#" class="footer__socials_icons icon-email"></a>
        <a href="#" class="footer__socials_icons icon-phone"></a>
      </div>
    </div>
    <form class="footer__form">
      <h3 class="footer__form_title">{t('footer.formTitle')}</h3>
      <label class="footer__form_label">
        <input type="text" placeholder={t('footer.placeholderEmail')} />
      </label>
      <label class="footer__form_label">
        <input class="footer__form_label-btn"type="text" placeholder={t('footer.placeholderMessage')} />
        <button type="button">{t('footer.sendBtn')}</button>
      </label>
      <p class="footer__form_copyright">
        Via Giuseppe Mazzini, 9 20123 Milano MI
      </p>
    </form>
  </div>
</footer>
