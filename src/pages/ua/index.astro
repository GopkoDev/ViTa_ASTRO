---
import { changeLanguage, t } from "i18next";
import Layout from "../../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";
import homePageImg from "../../images/home_page.png";
import "../../styles/pages/Home.scss";

changeLanguage("ua");
---

<Layout title="Monics" active="home">
  <main class="page home">
    <section class="home__container">
      <div class="home__img">
        <Image src={homePageImg} alt="main page image" />
      </div>
      <h2 class="home__phrase">
        {t("home.phrase")}<span> {t("home.phraseStrong")}</span>.
      </h2>
      <a class="btn home__btn" href="./projects.html">{t("home.projectsBtn")}</a>
    </section>
  </main>
</Layout>
